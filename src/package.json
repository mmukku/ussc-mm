{
  "name": "ussc",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "appcache-manifest": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "prettier": "^1.6.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.12",
    "react-snapshot": "^1.2.0",
    "styled-components": "^2.1.2",
    "uswds": "^1.3.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "reactSnapshot": {
    "exclude": [
      "appcache/*.*"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "start": "react-scripts start",
    "build": "react-scripts build && react-snapshot && appcache-manifest build/**/*.{html,css,js,png,svg} -o build/appcache/manifest.appcache && cpx appcache/appcache-manifest.html build/appcache",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "cpx": "^1.5.0"
  }
}
